{
  "plugins": [
    "react"
  ],
  "globals": {
    "ENV": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.5.2"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-console": 0, // Doesn't matter for dev env. In prod we strip console.
    "no-unused-vars": "warn",
    "no-empty": "warn",
    "react/prop-types": "warn"
  }
}
